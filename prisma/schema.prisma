// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  lobbyId   Int? 
  lobby     Lobby?   @relation(fields: [lobbyId], references: [id])
  player    Player?
}

model Lobby {
  id        Int      @id @default(autoincrement())
  name      String   @default("lobby")
  createdAt DateTime @default(now())
  started   Boolean  @default(false)
  players   User[]
  game      Game?   

  maxPlayers Int     @default(2)
  hostId       Int
  playerCount Int
}


model Player {
  id         Int      @id @default(autoincrement())
  userId     Int      @unique
  user       User     @relation(fields: [userId], references: [id])
  gameId     Int      
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  cards      Card[]
  battles    Battle[]
  battleCards BattleCard[]

  generalSelected Boolean @default(false)
  turnEnded Boolean @default(false)
}

model Game {
  id         Int      @id @default(autoincrement())
  name       String
  createdAt  DateTime @default(now())
  players    Player[] 
  hostId     Int
  turn       Int      @default(1)
  turnOrder  Int[]
  heroDeck   Int[]
  finished   Boolean  @default(false)
  lobbyId     Int     @unique
  lobby       Lobby   @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  
  battling   Boolean  @default(false)
  battleOrder Int[]
  battles    Battle[]
}

model Card {
  id         Int      @id @default(autoincrement())
  playerId   Int?      
  player     Player?   @relation(fields: [playerId], references: [id])
  gameId     Int      
  battleCard BattleCard[]
  
  inDiscardPile Boolean @default(false)
  inHeroShop  Boolean @default(false)
  isGeneralSelection  Boolean @default(false)

  uid        String
  img        String
  name       String
  atk        Int
  hp         Int
  top        Json
  right      Json
  bottom     Json
  left       Json
  type       String
  ability    String
  style      String
  cost       String[]
  desc       String
  x          Int?
  y          Int?
  inHand     Boolean @default(false)
}

model Battle {
  id         Int      @id @default(autoincrement())
  players    Player[]
  gameId     Int
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  ended      Boolean  
  turnOrder  Int[]
  turn       Int
}

model BattleCard {
  id         Int      @id @default(autoincrement())

  playerId   Int
  player     Player   @relation(fields: [playerId], references: [id])

  gameCardId Int?
  gameCard   Card?    @relation(fields: [gameCardId], references: [id])

  inGraveyard Boolean @default(false)

  currentAtk Int
  currentHp  Int
  atk        Int
  hp         Int

  x          Int
  y          Int
  inHand     Boolean @default(false)

  top        Json
  right      Json
  bottom     Json
  left       Json

  hasCast    Boolean @default(false)
}



